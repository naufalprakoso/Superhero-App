<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="@dimen/card_elevation_normal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="@dimen/margin_normal"
                android:layout_weight="1"
                android:background="@color/shimmerBackground"
                android:contentDescription="@string/accessibility_hero_image" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <View
                    android:id="@+id/tvNamePlaceholder"
                    android:layout_width="100dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:background="@color/shimmerBackground" />

                <View
                    android:id="@+id/tvRacePlaceholder"
                    android:layout_width="75dp"
                    android:layout_height="10dp"
                    android:layout_below="@+id/tvNamePlaceholder"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginTop="@dimen/margin_small"
                    android:background="@color/shimmerBackground" />

                <View
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/tvRacePlaceholder"
                    android:layout_margin="@dimen/margin_normal"
                    android:background="@color/shimmerBackground"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp" />

            </RelativeLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>